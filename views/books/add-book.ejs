<%- include("../_header") -%>


    <h1><%= title %></h1>

    <% if (typeof error != 'undefined') { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
    <% } %>

    <form action="/books/add" method="post" enctype="multipart/form-data">
        <div class="form-horizontal">
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Title">Title</label>
                <div class="col-sm-8">
                    <input autofocus class="form-control" name="Title" value="" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Author">Author</label>
                <div class="col-sm-7">
                    <input class="form-control" name="Author" value="" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="Comments">Comments</label>
                <div class="col-sm-10">
                    <textarea class="form-control" cols="20" name="Comments" maxlength="32000"
                        rows="7"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input type="submit" value="Save" class="btn btn-default btn-success" />
                    <a class="btn btn-outline-dark cancel" href="/books">Cancel</a>
                </div>
            </div>

             <div class="form-group row">
                 <label class="col-form-label col-sm-2" for="BookImage">Book Image</label>
                 <div class="col-sm-7">
                     <input type="file" class="" name="BookImage" value="" />
                 </div>
             </div>
        </div>
    </form>
<%- include("../_footer") -%>
